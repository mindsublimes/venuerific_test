<div class="container-fluid mt-5">
  <div class="card mb-4">
    <div class="card-header">
      <i class="fas fa-table mr-1"></i>
      All Posts
      <%= link_to "Add New Post", new_admin_post_path, class: 'float-right' %>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Author</th>
              <th>Title</th>
              <th>Description</th>
              <th>Created At</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.author %></td>
                <td><%= post.title %></td>
                <td><%= post.description.truncate(20) %></td>
                <td><%= post.created_at.strftime("%Y-%m-%d") %></td>
                <td>
                  <%= link_to "edit", edit_admin_post_path(post), class: 'btn btn-primary' %>
                  <%= link_to "view", admin_post_path(post), class: 'btn btn-secondary' %>
                  <%= link_to "delete", admin_post_path(post), method: :delete, data: {confirm: "Are you sure"}, class: 'btn btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
